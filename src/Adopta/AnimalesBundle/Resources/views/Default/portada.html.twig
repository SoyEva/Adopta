{% extends '::frontend.html.twig' %}

{% block title %}Adopta un amigo{% endblock %}
{% block id 'portada' %}

{% block article %} 

<section class="descripcion">
	<section class="animales">
		<h1>GATOS</h1>
		
		    {% for animales in animales %}
		    {% if animales.tipo == 'gato' %}
		    <div class="animal">
			    <section class="datos">
				    <p><span>Nombre: {{animales.nombre}},</span>
				    <span> {{ animales.edad|e }}</span></p>
				    <p>Descripción:{{ animales.descripcion }}</p>
				    <p>Asociación: <a href="{{ path('asociacion_portada', {'asociacion':
animales.asociacion.slug}) }}">{{ animales.asociacion.nombre }}</a></p>
				    <p>Ciudad: {{ animales.asociacion.ciudad.nombre }}</p>
				    <p><a class="boton" href="#">Más información</a></p>
			    </section>
				<section class="imagen">
					<img alt="Fotografía del animal" src="{{ asset('uploads/images/' ~animales.rutaFoto) }}">
				</section>
			</div>
			{% endif %} 
			{% endfor %} 
	</section>
	<section class="animales">
		<h1>PERROS</h1>

	    {% for animales in animales %}
	    {% if animales.tipo == 'perro' %}
	    <div class="animal">
	    	<section class="datos">
			    <p><span>Nombre: {{ animales.nombre}},</span>
			    <span>{{ animales.edad|e }}</span></p>
			    <p>Descripción:{{ animales.descripcion }}</p>
				<p>Asociación: <a href="{{ path('asociacion_portada', {'asociacion':
animales.asociacion.slug}) }}">{{ animales.asociacion.nombre }}</a></p>
			    <p>Ciudad: {{ animales.asociacion.ciudad.nombre }}</p>
			    <p><a class="boton" href="#">Más información</a></p>
			</section>
			<section class="imagen">
				<img alt="Fotografía del animal" src="{{ asset('uploads/images/' ~animales.rutaFoto) }}">	
			</section>
		</div>
	    {% endif %}
	    {% endfor %}		
	</section>
</section>

{% endblock %}

{% block aside %} 
{{ render(controller('CiudadBundle:Default:listaCiudades')) }}
{% endblock %}